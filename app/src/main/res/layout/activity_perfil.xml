<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil">


    <EditText
        android:id="@+id/Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/Espacio"
        android:hint="Nombre"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
    <Space
        android:id="@+id/Espacio"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/Apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellidos"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_toRightOf="@id/Espacio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        />
    <EditText
        android:id="@+id/Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/Espacio"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_below="@+id/Nombre"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:hint="Telefono"
        android:inputType="phone"
        />

    <EditText
        android:id="@+id/FechaNacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Fecha Nacimiento"
        android:inputType="date"
        android:layout_below="@+id/Nombre"
        android:layout_toRightOf="@id/Espacio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:minHeight="48sp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/Genero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/Espacio"
        android:hint="Genero"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_below="@+id/Telefono"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        />
    <Spinner
        android:id="@+id/Sexo_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha Nacimiento"
        android:layout_below="@+id/FechaNacimiento"
        android:layout_toRightOf="@id/Espacio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:spinnerMode="dropdown"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:contentDescription="Elija"
        />
    <TextView
        android:id="@+id/GrupoSanguineo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/Espacio"
        android:hint="Grupo Sanguineo"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_below="@+id/Genero"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        />

    <Spinner
        android:id="@+id/Sangre_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha Nacimiento"
        android:layout_below="@+id/Sexo_spinner"
        android:layout_toRightOf="@id/Espacio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:spinnerMode="dropdown"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:contentDescription="Elija"
        />



    <EditText
        android:id="@+id/Altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/Espacio"
        android:hint="Altura (cm)"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_below="@+id/GrupoSanguineo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/Peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Peso (KG)"
        android:layout_below="@+id/Sangre_spinner"
        android:layout_toRightOf="@id/Espacio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:spinnerMode="dropdown"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        />
    <RelativeLayout
        android:id="@+id/DatosMultiples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Altura"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/Alergias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alergias (Ej: acaros, avispas,etc)"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:minHeight="48sp"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/Medico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Alergias"
            android:hint="Antecdentes mÃ©dicos relevantes"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:minHeight="48sp"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/DatosUsuario"
        android:layout_below="@+id/DatosMultiples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="Enviar Datos"
        />


</RelativeLayout>