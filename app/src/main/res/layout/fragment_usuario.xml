<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.Frag_Usuario">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/NombreUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/Espacio"
        android:hint="Nombre"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />
    <Space
        android:id="@+id/Espacio"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/ApellidosUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellidos"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_toRightOf="@id/Espacio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/TelefonoUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/Espacio"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_below="@+id/NombreUser"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:hint="Telefono"
        />

    <TextView
        android:id="@+id/FechaNacimientoUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha Nacimiento"
        android:layout_below="@+id/NombreUser"
        android:layout_toRightOf="@id/Espacio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:minHeight="48sp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/Genero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/Espacio"
        android:hint="Genero"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_below="@+id/TelefonoUser"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/SexoUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sexo"
        android:layout_below="@+id/FechaNacimientoUser"
        android:layout_toRightOf="@id/Espacio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:contentDescription="Elija"
        />
    <TextView
        android:id="@+id/GrupoSanguineo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/Espacio"
        android:hint="Grupo Sanguineo"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_below="@+id/Genero"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/SangreUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sangre"
        android:layout_below="@+id/SexoUser"
        android:layout_toRightOf="@id/Espacio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:spinnerMode="dropdown"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:contentDescription="Elija"
        />



    <TextView
        android:id="@+id/AlturaUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/Espacio"
        android:hint="Altura (cm)"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:layout_below="@+id/GrupoSanguineo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:inputType="numberDecimal"
        />

    <TextView
        android:id="@+id/PesoUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Peso (KG)"
        android:layout_below="@+id/SangreUser"
        android:layout_toRightOf="@id/Espacio"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:spinnerMode="dropdown"
        android:minHeight="48sp"
        android:textSize="20sp"
        android:inputType="numberDecimal"
        />
    <RelativeLayout
        android:id="@+id/DatosMultiples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AlturaUser"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/AlergiasUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alergias"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:minHeight="48sp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/MedicoUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AlergiasUser"
            android:hint="Antecdentes mÃ©dicos relevantes"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:minHeight="48sp"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>
    </RelativeLayout>
</FrameLayout>