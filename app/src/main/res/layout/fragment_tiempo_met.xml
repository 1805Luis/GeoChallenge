<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ActividadTiempo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragmentos.Frag_TiempoMet"
    android:background="@drawable/estilorectangulo">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ImagenTiempo"
            android:layout_width="151dp"
            android:layout_height="75sp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/Temp"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:elegantTextHeight="false"
            android:freezesText="false"
            android:gravity="center_horizontal"
            android:hint="19 ºC"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="40sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tempMax"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_maxima"

                android:hint="8ºC"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/tempMin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_minima"
                android:hint="-9ºC"
                android:textColor="@color/black"
                android:textSize="20dp"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>